		"html",
		"css",
		"web",
		"a11y",
		"w3c",
		"webstandard",
		"wcag"
	],
	"scripts": {
		"build": "unbuild",
		"build:deps": "pnpm --filter @public-ui/core^... build",
		"dev": "nodemon --exec unbuild --ext js,json,ts --watch src",
		"format": "prettier --check src",
		"lint": "tsc --noemit && eslint src",
		"prepack": "unbuild",
		"unused": "knip"
	},
	"dependencies": {
		"@public-ui/schema": "2.0.6",
		"adopted-style-sheets": "1.1.3",
		"i18next": "23.8.2"
	},
	"devDependencies": {
		"@types/node": "ts5.3",
		"@typescript-eslint/eslint-plugin": "7.0.1",
		"@typescript-eslint/parser": "7.0.1",
		"eslint": "8.56.0",
		"knip": "5.0.1",
		"nodemon": "3.0.3",
		"typescript": "5.3.3",
		"unbuild": "1.2.1"
	},
	"sideEffects": false,
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		}
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	]
}
