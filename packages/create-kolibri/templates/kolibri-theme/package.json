{
	"name": "{{kebab name}}",
	"version": "0.0.0",
	"description": "{{description}}",
	"author": {
		"name": "{{author}}",
		"email": "{{email}}"
	},
	"license": "EUPL-1.2",
	"private": false,
	"scripts": {
		"build": "unbuild",
		"depcheck": "depcheck",
		"format": "prettier --check src",
		"lint": "eslint src && tsc --noemit",
		"prepack": "unbuild",
		"test": "THEME_MODULE=src/index THEME_EXPORT={{capital name}} kolibri-visual-test",
		"test-update": "THEME_MODULE=src/index THEME_EXPORT={{capital name}} kolibri-visual-test --update-snapshots",
		"unused": "knip",
		"update": "ncu -t minor -u && ncu"
	},
	"devDependencies": {
		"@public-ui/components": "2.0.0-rc.0",
		"@public-ui/schema": "2.0.0-rc.0",
		"@public-ui/visual-tests": "2.0.0-rc.0",
		"@types/node": "ts5.2",
		"@typescript-eslint/eslint-plugin": "6.7.0",
		"@typescript-eslint/parser": "6.7.0",
		"depcheck": "1.4.6",
		"eslint": "8.49.0",
		"eslint-plugin-no-loops": "0.3.0",
		"knip": "2.24.1",
		"npm-check-updates":"16.14.4",
		"prettier":"3.0.3",
		"typescript": "5.2.2",
		"unbuild": "1.2.1"
	},
	"peerDependencies": {
		"@public-ui/components": "2.0.0-rc.0"
	},
	"sideEffects": false,
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		}
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"assets",
		"dist"
	]
}
