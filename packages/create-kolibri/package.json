{
	"name": "create-kolibri",
	"version": "1.4.0-rc.2",
	"license": "EUPL-1.2",
	"homepage": "https://public-ui.github.io",
	"repository": "https://github.com/public-ui/kolibri",
	"bugs": {
		"url": "https://github.com/public-ui/kolibri/issues",
		"email": "kolibri@itzbund.de"
	},
	"author": {
		"name": "Informationstechnikzentrum Bund",
		"email": "kolibri@itzbund.de"
	},
	"contributors": [
		{
			"name": "Martin Oppitz",
			"email": "martin.oppitz@itzbund.de"
		}
	],
	"description": "The CLI can be used to create various projects based on the KoliBri (@public-ui) accessible web component library.",
	"keywords": [
		"accessibility",
		"accessible",
		"bitv",
		"framework",
		"library",
		"designsystem",
		"design",
		"system",
		"web components",
		"webcomponents",
		"aria",
		"wai",
		"axe",
		"custom elements",
		"styleguide",
		"style",
		"guide",
		"ui",
		"html",
		"css",
		"web",
		"a11y",
		"w3c",
		"webstandard",
		"wcag",
		"angular",
		"astro",
		"next.js",
		"preact",
		"react",
		"vue",
		"remix",
		"solid",
		"template"
	],
	"scripts": {
		"build": "rimraf dist && tsup src/cli.ts --minify",
		"clean": "git clean -f -d -X",
		"postinstall": "npm-run-all postinstall:*",
		"postinstall:angular": "cpy \"defaults/**/*\" \"!defaults/unocss.config.ts\" templates/angular-app/ --dot",
		"postinstall:astro": "cpy \"defaults/**/*\" \"!defaults/public/index.html\" templates/astro-app/ --dot",
		"postinstall:library": "cpy \"defaults/*{.editorconfig,commitlint.config.js}\" templates/kolibri-library/ --dot",
		"postinstall:library:assets": "cpy \"{codicons,fontawesome-free,icofont,noto-sans,roboto,favicon.ico}\" \"../../../templates/kolibri-library/packages/components/src/assets/\" --cwd=\"defaults/public/assets/\" --dot",
		"postinstall:theme": "cpy \"defaults/{**/.{editorconfig,eslintignore,npmrc,prettierignore,ts-prunerc.js},**/gitignore}\" templates/kolibri-theme/ --dot",
		"postinstall:next.js": "cpy \"defaults/**/*\" \"!defaults/public/index.html\" templates/next.js-app/ --dot",
		"postinstall:preact": "cpy \"defaults/**/*\" templates/preact-app/ --dot",
		"postinstall:react": "cpy \"defaults/**/*\" templates/react-app/ --dot",
		"postinstall:solid": "cpy \"defaults/**/*\" templates/solid-app/ --dot",
		"postinstall:static": "cpy \"defaults/{public/**/*,**/.npmrc,**/gitignore}\" \"!defaults/public/index.html\" templates/static-page --dot",
		"postinstall:vue": "cpy \"defaults/**/*\" templates/vue-app/ --dot",
		"dev": "tsup src/cli.ts --watch",
		"prepack": "git clean -f -d -X templates/ && npm run build",
		"format": "prettier --check src && npm-run-all format:*",
		"format:angular": "prettier --check templates/angular-app -w",
		":format:astro": "prettier --check templates/astro-app -w",
		"format:kolibri-library": "prettier --check templates/kolibri-library -w",
		"format:kolibri-theme": "prettier --check templates/kolibri-theme -w",
		"format:next.js": "prettier --check templates/next.js-app -w",
		"format:preact": "prettier --check templates/preact-app -w",
		"format:react": "prettier --check templates/react-app -w",
		"format:solid": "prettier --check templates/solid-app -w",
		"format:vue": "prettier --check templates/vue-app -w",
		"ncu:major": "ncu",
		"ncu:minor": "ncu -t minor -u",
		"ncu:patch": "ncu -t patch -u",
		"update": "pnpm ncu:patch && pnpm ncu:minor && pnpm ncu:major",
		"ts-prune": "ts-prune src -e",
		"test": "npm run clean && pnpm i && npm run build && rimraf my-app && node dist/cli.js my-app"
	},
	"bin": "dist/cli.js",
	"dependencies": {
		"cpy-cli": "4.2.0",
		"create-create-cli": "7.3.2",
		"kleur": "4.1.5",
		"npm-run-all": "4.1.5"
	},
	"devDependencies": {
		"@commitlint/cli": "17.4.2",
		"@commitlint/config-conventional": "17.4.2",
		"@leanup/stack": "1.3.43",
		"@types/node": "18.13.0",
		"cross-env": "7.0.3",
		"depcheck": "1.4.3",
		"husky": "8.0.3",
		"lerna": "6.4.1",
		"license-report": "6.3.0",
		"lint-staged": "13.1.1",
		"npm-check-updates": "16.6.5",
		"prettier": "2.8.3",
		"rimraf": "4.1.2",
		"ts-node": "10.9.1",
		"ts-prune": "0.10.3",
		"tsup": "6.5.0",
		"typescript": "4.9.5"
	},
	"files": [
		"defaults/**/*",
		"defaults/.npmrc",
		"dist/**/*",
		"templates/**/*"
	]
}
