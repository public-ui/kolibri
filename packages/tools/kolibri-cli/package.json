{
	"name": "@public-ui/kolibri-cli",
	"version": "1.7.0-rc.4",
	"license": "EUPL-1.2",
	"homepage": "https://public-ui.github.io",
	"repository": "https://github.com/public-ui/kolibri",
	"bugs": {
		"url": "https://github.com/public-ui/kolibri/issues",
		"email": "kolibri@itzbund.de"
	},
	"author": {
		"name": "Informationstechnikzentrum Bund",
		"email": "kolibri@itzbund.de"
	},
	"bin": {
		"kolibri": "dist/index.js"
	},
	"description": "CLI for executing some helpful commands for KoliBri projects.",
	"scripts": {
		"reset": "pnpm i @public-ui/components@1.1.7",
		"depcheck": "depcheck --ignores=\"chalk,loglevel,@public-ui/components\" --ignore-bin-package --skip-missing",
		"format": "prettier -c src",
		"lint": "eslint src && tsc --noEmit",
		"prepack": "tsc",
		"start": "ts-node src/index.ts migrate --ignore-uncommitted-changes --test-tasks test",
		"restart": "pnpm reset && pnpm start",
		"unused": "knip",
		"update": "ncu -t minor -u && ncu",
		"watch": "nodemon --ignore package.json src/index.ts migrate --ignore-uncommitted-changes --test-tasks test"
	},
	"type": "commonjs",
	"dependencies": {
		"chalk": "^4",
		"commander": "11.0.0",
		"gradient-string": "2.0.2",
		"loglevel": "1.8.1",
		"prettier": "3.0.3",
		"semver": "7.5.4"
	},
	"devDependencies": {
		"@public-ui/components": "1.1.7",
		"@types/gradient-string": "1.1.2",
		"@types/node": "20.5.9",
		"@typescript-eslint/eslint-plugin": "6.6.0",
		"@typescript-eslint/parser": "6.6.0",
		"depcheck": "1.4.5",
		"eslint-config-prettier": "9.0.0",
		"eslint-plugin-html": "7.1.0",
		"eslint-plugin-jsdoc": "46.6.0",
		"eslint-plugin-json": "3.1.0",
		"eslint-plugin-jsx-a11y": "6.7.1",
		"eslint-plugin-no-loops": "0.3.0",
		"eslint-plugin-react": "7.33.2",
		"knip": "2.22.0",
		"mocha": "10.2.0",
		"nodemon": "3.0.1",
		"npm-check-updates": "16.13.2",
		"ts-node": "10.9.1",
		"typescript": "5.2.2"
	},
	"files": [
		"dist"
	]
}
