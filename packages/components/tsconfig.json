{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"declaration": false,
		"experimentalDecorators": true,
		"lib": ["dom", "dom.iterable", "ES2017"],
		"moduleResolution": "node",
		"module": "ESNext",
		"target": "ES2017",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"jsx": "react",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"removeComments": true,
		"types": ["node", "jest"],
		"typeRoots": ["node_modules/@types"],
		"strict": true,
		"skipLibCheck": true
	},
	"include": [
		"declare.d.ts",
		"src",
		"../core/src/lib/i18n.ts",
		"../core/src/i18n.ts",
		"../core/src/index.ts",
		"../core/src/declare.d.ts",
		"../core/src/locales"
	],
	"exclude": ["node_modules"]
}
