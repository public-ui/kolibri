# https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = tab
max_line_length = 160
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = false

[*.yml]
indent_style = space
